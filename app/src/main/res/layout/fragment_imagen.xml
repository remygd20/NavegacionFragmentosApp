<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ImagenFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageViewOficinas"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="Oficinas de Lamborghini"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewDescripcionOficinas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:text="La majestuosa sede de Automobili Lamborghini en Sant'Agata Bolognese, Italia."/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"/>

        <ImageView
            android:id="@+id/imageViewTaller"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:contentDescription="Coche en producción en el taller de Lamborghini"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewDescripcionTaller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:text="Donde la pasión y la ingeniería se unen para crear cada superdeportivo."/>

    </LinearLayout>
</ScrollView>